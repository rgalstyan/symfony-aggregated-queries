{
  "name": "rgalstyan/symfony-aggregated-queries",
  "description": "Reduce multi-relation Doctrine queries to a single SQL statement using JSON aggregation. Solves Doctrine's N+1 problem.",
  "keywords": [
    "symfony",
    "doctrine",
    "orm",
    "performance",
    "optimization",
    "eager-loading",
    "json-aggregation",
    "query-optimization",
    "database-performance",
    "doctrine-n-plus-1"
  ],
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Razmik Galstyan",
      "email": "galstyanrazmik1988@gmail.com",
      "homepage": "https://github.com/rgalstyan"
    }
  ],
  "homepage": "https://github.com/rgalstyan/symfony-aggregated-queries",
  "support": {
    "issues": "https://github.com/rgalstyan/symfony-aggregated-queries/issues",
    "source": "https://github.com/rgalstyan/symfony-aggregated-queries",
    "docs": "https://github.com/rgalstyan/symfony-aggregated-queries/blob/main/README.md"
  },
  "require": {
    "php": "^8.1 || ^8.2 || ^8.3",
    "doctrine/dbal": "^3.6 || ^4.0",
    "doctrine/orm": "^2.14 || ^3.0",
    "symfony/config": "^6.0 || ^7.0",
    "symfony/dependency-injection": "^6.0 || ^7.0",
    "symfony/http-kernel": "^6.0 || ^7.0",
    "symfony/yaml": "^6.0 || ^7.0"
  },
  "require-dev": {
    "doctrine/doctrine-bundle": "^2.10",
    "phpunit/phpunit": "^10.5 || ^11.0",
    "symfony/framework-bundle": "^6.0 || ^7.0",
    "symfony/phpunit-bridge": "^6.0 || ^7.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-symfony": "^2.0",
    "phpstan/phpstan-doctrine": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Rgalstyan\\SymfonyAggregatedQueries\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rgalstyan\\SymfonyAggregatedQueries\\Tests\\": "tests/"
    }
  },
  "extra": {
    "symfony": {
      "bundle-class": "Rgalstyan\\SymfonyAggregatedQueries\\Bundle\\SymfonyAggregatedQueriesBundle"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage --coverage-text",
    "phpstan": "phpstan analyse src --level=9",
    "phpstan:baseline": "phpstan analyse src --level=9 --generate-baseline",
    "check": [
      "@phpstan",
      "@test"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}